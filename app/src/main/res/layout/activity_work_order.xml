    <RelativeLayout
        android:id="@+id/relativeLayForSig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/workOrderWorkDescEditText">
        <TextView
            style="@style/draft_list_item_text"
            android:id="@+id/hasSignatureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:paddingTop="0dp"
            android:text="@string/hasSignature"
            />
        <Button
            android:id="@+id/getCustomerSignatureBtn"
            style="@style/transparentButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:enabled="false"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/hasSignatureLabel"
            android:text="@string/signature"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_toEndOf="@+id/getCustomerSignatureBtn">

            <TextView
                style="@style/draft_list_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:paddingTop="0dp"
                android:text="@string/work_order_finished"/>

            <RadioGroup
                android:id="@+id/isWorkOrderFinishedRg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioBtnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@drawable/text_color"
                    android:textColor="@drawable/text_color"
                    android:text="@string/yes"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioBtnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_marginStart="10dp"
                    android:buttonTint="@drawable/text_color"
                    android:textColor="@drawable/text_color"
                    android:text="@string/no"/>
            </RadioGroup>

        </LinearLayout>
    </RelativeLayout>
        <RelativeLayout
