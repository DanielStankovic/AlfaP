<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/deleteAddedFailureAndCauseImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_menu_delete"/>

    <TextView
        style="@style/draft_list_item_text"
        android:id="@+id/addedFailureName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingTop="0dp"
        android:layout_toStartOf="@+id/deleteAddedFailureAndCauseImg"
        android:layout_alignParentStart="true"
        />

    <TextView
        style="@style/draft_list_item_text"
        android:id="@+id/addedFailureCauseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingTop="0dp"
        android:layout_toStartOf="@+id/deleteAddedFailureAndCauseImg"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addedFailureName"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>