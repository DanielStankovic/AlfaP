<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/transparent"
    >
    <TextView
        style="@style/draft_list_item_text"
        android:id="@+id/serviceNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingTop="0dp"
        android:layout_toStartOf="@+id/serviceNormInfoBtn"
        android:layout_alignParentStart="true"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/serviceNameTv"
        android:layout_toStartOf="@+id/serviceNormInfoBtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/serviceCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="@color/text_subtitle_white"
            />

        <TextView
            android:id="@+id/serviceUnitTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="@color/text_subtitle_white"
            />

        <TextView
            android:id="@+id/servicePriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="@color/text_subtitle_white"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/serviceNormInfoBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:src="@android:drawable/ic_dialog_info"/>


</RelativeLayout>