<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- -->
    <style name="containerSubtitleLabel">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="containerSubtitleLabelDraft">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="transparentButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@drawable/text_color</item>

    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="list_item_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_item_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_item_norm_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="draft_list_item_text">
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="list_item_label">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="added_items_label">
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="added_items_recycler_view">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rv_border</item>
    </style>

    <style name="materialText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/blue_gray</item>
        <item name="hintTextAppearance">@style/textInputLayoutEnabled</item>
        <item name="android:textSize">14sp</item>
        <item name="android:labelTextSize">20sp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>



    </style>

    <style name="materialTextDraft" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    <item name="android:textColorHint">@color/blue_gray</item>
    <item name="hintTextAppearance">@style/textInputLayoutEnabled</item>
    <item name="android:textSize">14sp</item>
    <item name="android:labelTextSize">20sp</item>
    <item name="boxStrokeColor">@color/white</item>
    <item name="boxStrokeWidth">5dp</item>
    <item name="boxCornerRadiusBottomEnd">5dp</item>
    <item name="boxCornerRadiusTopEnd">5dp</item>
    <item name="boxCornerRadiusBottomStart">5dp</item>
    <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <style name="textInputLayoutEnabled" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>


    </style>

    <style name="editTextWorkOrder">
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="editTextWorkOrderDraft">
        <item name="android:textColor">@color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="editTextWorkOrderFocusable">
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:enabled">false</item>

    </style>

    <style name="spinner">
    <item name="android:layout_margin">5dp</item>

    </style>

    <!-- Theme and style for imagetype spinner-->
    <style name="ImageTypeSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/light_gray</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ImageTypeSpinnerTheme" parent="myDialog">
        <item name="android:dropDownListViewStyle">@style/ImageTypeSpinnerStyle</item>
    </style>


    <!-- TextAppearance for error on EditText-->

    <style name="errorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyProgressBarTwo" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">@color/gradient_start</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar_horizontal</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:minHeight">40dp</item>

    </style>

</resources>
