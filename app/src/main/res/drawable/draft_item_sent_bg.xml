<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" />
            <gradient  android:angle="-90"  android:startColor="@color/draft_gradient_sent_end_clicked" android:endColor="@color/draft_gradient_sent_start_clicked"  />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip"  />
            <corners android:radius="3dip" />
            <solid  android:color="@color/draft_gradient_sent_end"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"  /><!--  #88918c stroke svuda -->
            <gradient  android:angle="-90"  android:startColor="@color/draft_gradient_sent_start" android:endColor="@color/draft_gradient_sent_end" />
        </shape>
    </item>
</selector>